        '#type'             => 'markup',
        '#value'            => '<div class="clear"></div>'
    );
    
    $form['email']	    = array(
        '#type'             => 'textfield',
        '#title'            => t('Email'),
        '#default_value'    => $contact['email'],
        '#required'         => true
    );

    return $form;
}



